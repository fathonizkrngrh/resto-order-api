<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="orderModalLabel">Order Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <!-- Informasi order (sisi kiri) -->
          <div class="col-md-6" id="receipt">
            <div class="row">
              <div class="col-sm-6">
                <h2 class="mb-1 text-muted" id="detail-merchant-name"></h2>
              </div>
              <div class="col-sm-6 text-sm-end">
                <h4 class="font-size-15" id="detail-trx">Transaction</h4>
              </div>
            </div>

            <hr class="my-4">
            
            <div class="row">
              <div class="col-sm-6">
                <div class="text-muted">
                  <div>
                    <h5 class="mb-1">Buyer:</h5>
                    <p id="detail-username"></p>
                  </div>
                  <div>
                    <h5 class="mb-1">Phone:</h5>
                    <p id="detail-phone"></p>
                  </div>
                  <div>
                    <h5 class="mb-1">Cashier:</h5>
                    <p id="detail-cashier"></p>
                  </div>
                </div>
              </div>
              <!-- <!-- end col -->
              <div class="col-sm-6">
                <div class="text-muted text-sm-end">
                  <div>
                    <h5 class="mb-1">Transaction Code:</h5>
                    <p id="detail-trx-code"></p>
                  </div>
                  <div>
                    <h5 class="mb-1">Transaction Date:</h5>
                    <p id="detail-date"></p>
                  </div>
                  <div>
                    <h5 class="mb-1">Table:</h5>
                    <p id="detail-table"></p>
                  </div>
                </div>
              </div> 
              <!-- end col -->
            </div>
            <div id="orderInfo">
              
            </div>
            <div class="d-print-none mt-4">
              <div class="float-end">
                  <a onclick="printReceipt()" class="btn btn-success me-1"><i class="fa fa-print"></i></a>
              </div>
            </div>
          </div>
          <!-- Formulir pembayaran (sisi kanan) -->
          <div class="col-md-6">
            <form action="/admin/order" method="POST">
              <div class="modal-body">
                <div class="mb-3">
                  <label for="name">Payment Method</label>
                  <select class="form-select" name="method" id="typeSelect">
                    <option selected disabled>--- Type ---</option>
                    <option value="cash">Cash</option>
                    <option value="qris">QRIS</option>
                    <option value="debit">Debit</option>
                    <option value="point">Point</option>
                  </select>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >
                  Close
                </button>
                <button type="submit" class="btn btn-primary">Submit Payment</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>