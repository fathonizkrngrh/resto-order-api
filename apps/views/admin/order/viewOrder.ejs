<!-- socket -->
<script src="https://cdn.socket.io/4.6.0/socket.io.min.js" integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+" crossorigin="anonymous"></script>

<!-- Socket.io Script -->
<script>
  const socket = io();

  socket.on('newOrder', (order) => {
    // Handle the new order
    console.log('New order received:', order);

    // Update the table
    updateTable(order);

    // Show alert
    showAlert('success', 'New order received');
  });

  function updateTable(order) {

    // Example: Append a new row to the table
    const newRow = `
    <tr>
      <td>${order._id+ 1}</td>
      <td>${order.invoice}</td>
      <td>Rp. ${order.total}</td>
      <td>${order.tableNumber}</td>
      <td>
        <table class="table mb-0 p-0">
          ${order.cartId.map(cartItem => `
            <tr>
              <td style="width: 30px">${cartItem.qty}x</td>
              <td>${cartItem.productId.name}</td>
              <td style="width: 150px">${cartItem.notes}</td>
            </tr>
          `).join('')}
        </table>
      </td>
      <td>${order.username}</td>
      <td>
        ${order.isPaid
          ? '<b class="text-success">Paid</b>'
          : '<b class="text-danger">Unpaid</b>'}
      </td>
      <td>
        <form action="/admin/order/${order._id}?_method=PUT" method="POST">
          <a href="javascript:void()" type="button" class="btn btn-warning btn-circle btn-sm button-detail"
            data-id="${order._id}" data-name="${order.invoice}">
            <i class="fas fa-edit"></i>
          </a>
          ${!order.isPaid
            ? '<button class="btn btn-circle btn-sm btn-success" type="submit"><i class="fas fa-check"></i></button>'
            : ''}
        </form>
      </td>
    </tr>`;

    document.getElementById('dataTable').innerHTML += newRow;
  }

  function showAlert(status, message) {
    const alertDiv = document.getElementById('alertDiv');
    alertDiv.innerHTML = `
      <div class="alert alert-${status}" role="alert">
        ${message}
      </div>
    `;
  }
</script>
