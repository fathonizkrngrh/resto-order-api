<div id="show-account" class="tab-pane fade show active" role="tabpanel">
  <!-- Table -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered table-sm"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>Merchant</th>
              <th>Username</th>
              <th>Name</th>
              <th>Role</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < accounts.length; i++){ %>
            <tr>
              <td><%- accounts[i].merchant_id %></td>
              <td><%- accounts[i].username %></td>
              <td><%- accounts[i].name %></td>
              <td><%- accounts[i].role %></td>
              <td><%- accounts[i].phone %></td>
              <td><%- accounts[i].email %></td>
              <td>
                <form action="/admin/account/<%- accounts[i].id%>?_method=DELETE" method="POST">
                  <a href="/admin/account/<%- accounts[i].id%>" class="btn btn-warning btn-circle btn-sm button-update">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button class="btn btn-danger btn-circle btn-sm" type="submit">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
              </td>
            </tr>

            <% }%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- AkhirTable -->
</div>
