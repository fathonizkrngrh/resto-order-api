<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<body class="bg-gradient-primary">
    <div class="container-fluid">
        <!-- Outer Row -->
        <div class="row justify-content-center vh-100 d-flex align-items-center">
            <div class="col-lg-6 col-12 d-flex align-items-center justify-content-center">
                <div class="card o-hidden border-0 shadow-lg p-5 col-lg-6 col-12">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Welcome Admin !</h1>
                    </div>
                    <%- include('../../partials/message.ejs') %>
                    <form class="user" action="/admin/signin" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control form-control-user"
                                id="phonemail" aria-describedby="emailHelp" name="phonemail"
                                placeholder="Email or Phone">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control form-control-user"
                                id="password" placeholder="Password" name="password">
                        </div>
                        <button type="submit" class="btn btn-primary btn-user btn-block">Submit</button>
                    </form>
                    <hr>
                    <div class="text-center">
                        Forgot Password? <a class="small" href="forgot-password.html">Contact Admin</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>


