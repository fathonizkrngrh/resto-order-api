<div id="show-merchant" class="tab-pane fade show active" role="tabpanel">
  <!-- Table -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table
          class="table table-bordered table-sm"
          id="dataTable"
          width="100%"
          cellspacing="0"
        >
          <thead>
            <tr>
              <th>No.</th>
              <th>Name</th>
              <th>Package Name</th>
              <th>Location</th>
              <th>Status</th>
              <th>Social Media</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < merchants.length; i++){ %>
            <tr>
              <td><%- i + 1 %></td>
              <td><%- merchants[i].name %></td>
              <td><%- merchants[i].package_name %></td>
              <td><%- merchants[i].location %></td>
              <%  if(merchants[i].active == 0){ %>
                <td>
                  <b class="text-danger">Inactive</b>
                </td>
              <% } else { %>
                <td>
                  <b class="text-success">Active</b>
                </td>
              <% } %>
              <td><%- merchants[i].facebook %></td>

              <td>
                <form action="/admin/merchant/<%- merchants[i].id%>?_method=DELETE" method="POST">
                  <a href="/admin/merchant/<%- merchants[i].id%>" class="btn btn-warning btn-circle btn-sm button-update">
                    <i class="fas fa-edit"></i>
                  </a>
                  <button class="btn btn-danger btn-circle btn-sm" type="submit">
                    <i class="fas fa-trash"></i>
                  </button>
                </form>
                <form action="/admin/merchant/status"method="POST">
                  <input type="text" class="form-control" id="change-status" name="id" hidden value="<%- merchants[i].id%>"/>
                  <button class="btn btn-success btn-circle btn-sm" type="submit">
                    <i class="fas fa-check"></i>
                  </button>
                </form>
              </td>
            </tr>

            <% }%>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- AkhirTable -->
</div>
